{
    "name": "ozh/phpass",
    "type": "library",
    "license" : "Public Domain",
    "description": "Portable PHP password hashing framework",
    "keywords": ["Blowfish", "crypt", "password", "security"],
    "homepage": "http://github.com/ozh/phpass/",
    "authors": [
        {
            "name" : "Solar Designer",
            "email": "solar@openwall.com",
            "homepage": "http://openwall.com/phpass/"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=4.0"
    },
    "autoload": {
        "psr-0": {"Ozh\\Phpass\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {"Ozh\\Phpass\\Tests\\": "Tests/"}
    },
    "scripts": {
        "test": "cd Tests && phpunit --configuration phpunit.xml"
    }
}
